<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="Theme.Calculadora" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="CalculatorButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearance">@style/Widget.MaterialComponents.Button</item>
        <item name="shapeAppearanceOverlay">@style/Widget.MaterialComponents.Button.OutlinedButton</item>
    </style>

    <style name="CalculatorButtonStyle_Operation" parent="CalculatorButtonStyle">
        <item name="android:backgroundTint">@color/teal_200</item>
    </style>

    <style name="CalculatorButtonStyle_Reset" parent="CalculatorButtonStyle">
        <item name="android:backgroundTint">@color/red</item>
    </style>
</resources>



